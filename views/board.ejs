<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<!-- Quill.js 스크립트 -->
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
<%- include('partials/header') %>
<link rel="stylesheet" href="/style/board.css">
<div class="write-content">
    <form action="/boardProc" method="POST" enctype="multipart/form-data" onsubmit="return checkBoardSelection()">
        <!-- 📌 게시판 & 말머리 선택 -->
        <div class="select-options">
            <div class="select-group">
                <label for="board">게시판:</label>
                <select id="board" name="board" required>
                    <option value="">게시판 선택</option>
                    <option value="밀워키게시판">밀워키게시판</option>
                    <option value="타팀게시판">타팀게시판</option>
                    <option value="자유게시판">자유게시판</option>
                </select>
            </div>
            <div class="select-group">
                <label for="category">말머리:</label>
                <select id="category" name="category" required>
                    <option value="">말머리 선택</option>
                    <option value="MLB">MLB</option>
                    <option value="MIL">MIL</option>
                    <option value="STL">STL</option>
                    <option value="CHC">CHC</option>
                    <option value="CIN">CIN</option>
                    <option value="PIT">PIT</option>
                    <option value="ATL">ATL</option>
                    <option value="NYM">NYM</option>
                    <option value="PHI">PHI</option>
                    <option value="WSH">WSH</option>
                    <option value="MIA">MIA</option>
                    <option value="LAD">LAD</option>
                    <option value="SF">SF</option>
                    <option value="SD">SD</option>
                    <option value="ARI">ARI</option>
                    <option value="COL">COL</option>
                    <option value="NYY">NYY</option>
                    <option value="BOS">BOS</option>
                    <option value="TOR">TOR</option>
                    <option value="TB">TB</option>
                    <option value="BAL">BAL</option>
                    <option value="CLE">CLE</option>
                    <option value="DET">DET</option>
                    <option value="KC">KC</option>
                    <option value="MIN">MIN</option>
                    <option value="CHW">CHW</option>
                    <option value="HOU">HOU</option>
                    <option value="ATH">ATH</option>
                    <option value="TEX">TEX</option>
                    <option value="LAA">LAA</option>
                    <option value="SEA">SEA</option>
                    <option value="FA">FA</option>
                    <option value="WBC">WBC</option>
                </select>
            </div>
        </div>

        <!-- 제목 입력 -->
        <div class="write-form-group">
            <label for="title">제목:</label>
            <input type="text" id="title" name="title" required>
        </div>

        <!-- 📌 Quill WYSIWYG 에디터 -->
        <div class="write-form-group">
            <label for="editor-container">내용:</label>
            <div id="editor-container"></div> <!-- Quill 에디터 -->
            <input type="hidden" id="content" name="content"> <!-- 데이터 전송을 위한 hidden input -->
        </div>

        <!-- 📌 버튼 -->
        <div class="button-session">
            <button type="submit">작성 완료</button>
            <button type="button" id="cancelBtn" onclick="history.back()">취소</button>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
<script src="/js/editor.js"></script>
<script>
    function checkBoardSelection() {
        let selectedBoard = document.getElementById("board").value;
        console.log("✅ 선택된 게시판 (프론트):", selectedBoard); // 🔍 값 확인

        if (!selectedBoard) {
            alert("게시판을 선택해주세요.");
            return false;
        }
        return true;
    }
</script>